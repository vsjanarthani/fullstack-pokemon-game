{{> background}}

<div class="container-fluid d-flex">
    <!-- Draft Logo -->
    <div class="position-absolute top-0 start-50 translate-top">
         <img class="d-inline" id="heroHeadline"
            src="https://res.cloudinary.com/actionfdfds/image/upload/v1620603338/intrologo_khbj0h.png">
    </div>

    <form class="col-8 col-lg-3 position-absolute top-50 start-50 translate-middle p-10 m-10">
        <div class="form-group">
            <p> Welcome back to the <strong>Pok√©mon Draft!</strong> Login and have fun. </p>
        </div>
        <!-- Email input -->
        <div class="form-group">
            <label class="form-label" for="form1Example1">Email address</label>
            <input type="email" id="form1Example1" class="form-control email-login" />
        </div>

        <!-- Password input -->
        <div class="form-group">
            <label class="form-label" for="form1Example2">Password</label>
            <input type="password" id="form1Example2" class="form-control password-login" />
        </div>

        <!-- Sign up section -->
        <div class="row m-4">
            <div class="col">
                <!-- Signup link --><strong>
                    <a class="text-dark" id="sign-up" href="/signup">Want to Sign up?</a></strong>
            </div>

            <div class="form-group">
                <!-- Submit button -->
                <button id="loginbtn" type="submit" class="btn btn-dark btn-block mt-4 p-2">Log in</button>
            </div>
        </div>
    </form>
</div>
</div>
